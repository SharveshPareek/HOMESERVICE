<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/background_black</item>
        <item name="colorPrimaryDark">@color/background_black</item>
        <item name="colorAccent">@color/background_black</item>
<!--        <item name="android:windowFullscreen">true</item>-->
    </style>

    <style name="TextInputHint" parent="@style/TextAppearance.AppCompat">
        <item name="android:textColor">@color/red</item>
    </style>

    <style name="drawerarrowStyle" parent="Widget.AppCompat.DrawerArrowToggle">
        <item name="color">@color/white</item>
    </style>

    <style name="ProgressDialog" parent="Theme.AppCompat.Light.Dialog">
        <item name="colorAccent">@color/red</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@color/background_black</item>
    </style>

</resources>