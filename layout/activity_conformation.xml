<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="#26cd6f"
        tools:context=".Conformation">

    <!--#40c880-->
    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:orientation="vertical"
            android:layout_weight="0.3">

        <ImageView
                android:layout_width="120dp"
                android:layout_height="0dp"
                android:layout_gravity="center"
                android:layout_weight="0.7"
                android:src="@drawable/verified"
                app:tint="@color/white"/>

        <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.2"
                android:text="Service Booking Successful"
                android:id="@+id/tv_title"
                android:textColor="@color/white"
                android:textStyle="italic|bold"
                android:textSize="19sp"
                android:gravity="center"/>

    </LinearLayout>

    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.7"
            android:background="@drawable/blackbg_toprounded"
            android:orientation="vertical">

        <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scrollbars="none">

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Details "
                        android:textSize="18sp"
                        android:textStyle="italic|bold"
                        android:paddingStart="10dp"
                        android:paddingTop="10dp"
                        android:paddingBottom="5dp"/>

                <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="AC SERVICE"
                        android:id="@+id/item"
                        android:textSize="14sp"
                        android:textStyle="italic"
                        android:paddingStart="17dp"
                        android:paddingBottom="8dp"/>

                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                    <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:text="Brand Name"
                            android:layout_weight="0.5"
                            android:textSize="14sp"
                            android:textStyle="italic"
                            android:paddingStart="17dp"
                            android:paddingBottom="1dp"/>

                    <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:text="ONIDA"
                            android:textSize="14sp"
                            android:layout_weight="0.5"
                            android:id="@+id/brand_name"
                            android:textStyle="italic"
                            android:paddingStart="17dp"
                            android:paddingBottom="1dp"/>

                </LinearLayout>

                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                    <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:text="Model"
                            android:layout_weight="0.5"
                            android:textSize="14sp"
                            android:textStyle="italic"
                            android:paddingStart="17dp"
                            android:paddingBottom="1dp"/>

                    <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:text="5435sds"
                            android:textSize="14sp"
                            android:id="@+id/model"
                            android:layout_weight="0.5"
                            android:textStyle="italic"
                            android:paddingStart="17dp"
                            android:paddingBottom="1dp"/>

                </LinearLayout>

                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                    <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:text="Discripition"
                            android:layout_weight="0.5"
                            android:textSize="14sp"
                            android:textStyle="italic"
                            android:paddingStart="17dp"
                            android:paddingBottom="1dp"/>

                    <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:text="ONIDA"
                            android:id="@+id/discribe"
                            android:textSize="14sp"
                            android:layout_weight="0.5"
                            android:textStyle="italic"
                            android:paddingStart="17dp"
                            android:paddingBottom="1dp"/>

                </LinearLayout>

                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                    <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:text="Year"
                            android:layout_weight="0.5"
                            android:textSize="14sp"
                            android:textStyle="italic"
                            android:paddingStart="17dp"
                            android:paddingBottom="1dp"/>

                    <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:text="54df1s31c"
                            android:id="@+id/year"
                            android:justificationMode="inter_word"
                            android:textSize="14sp"
                            android:layout_weight="0.5"
                            android:textStyle="italic"
                            android:paddingStart="17dp"
                            android:paddingBottom="1dp"/>

                </LinearLayout>

                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                    <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:text="Name"
                            android:layout_weight="0.5"
                            android:textSize="14sp"
                            android:textStyle="italic"
                            android:paddingStart="17dp"
                            android:paddingBottom="1dp"/>

                    <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:text="54df1s31c"
                            android:justificationMode="inter_word"
                            android:textSize="14sp"
                            android:id="@+id/name"
                            android:layout_weight="0.5"
                            android:textStyle="italic"
                            android:paddingStart="17dp"
                            android:paddingBottom="1dp"/>

                </LinearLayout>

                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                    <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:text="Phone Number"
                            android:layout_weight="0.5"
                            android:textSize="14sp"
                            android:textStyle="italic"
                            android:paddingStart="17dp"
                            android:paddingBottom="1dp"/>

                    <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:text="54df1s31c"
                            android:justificationMode="inter_word"
                            android:textSize="14sp"
                            android:id="@+id/phno"
                            android:layout_weight="0.5"
                            android:textStyle="italic"
                            android:paddingStart="17dp"
                            android:paddingBottom="1dp"/>

                </LinearLayout>

                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                    <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:text="Address"
                            android:layout_weight="0.5"
                            android:textSize="14sp"
                            android:textStyle="italic"
                            android:paddingStart="17dp"
                            android:paddingBottom="1dp"/>

                    <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:text="54df1s31c"
                            android:justificationMode="inter_word"
                            android:textSize="14sp"
                            android:id="@+id/address"
                            android:layout_weight="0.5"
                            android:textStyle="italic"
                            android:paddingStart="17dp"
                            android:paddingBottom="1dp"/>

                </LinearLayout>

                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                    <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:text="Pin code"
                            android:layout_weight="0.5"
                            android:textSize="14sp"
                            android:textStyle="italic"
                            android:paddingStart="17dp"
                            android:paddingBottom="1dp"/>

                    <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:text="54df1s31c"
                            android:justificationMode="inter_word"
                            android:textSize="14sp"
                            android:id="@+id/pincode"
                            android:layout_weight="0.5"
                            android:textStyle="italic"
                            android:paddingStart="17dp"
                            android:paddingBottom="1dp"/>

                </LinearLayout>

                <View
                        android:layout_width="match_parent"
                        android:layout_height="2dp"
                        android:background="#808080"
                        android:layout_marginRight="5dp"
                        android:layout_marginLeft="5dp"
                        android:layout_marginTop="10dp"/>

                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:orientation="horizontal">

                    <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:text="Service Date"
                            android:layout_weight="0.5"
                            android:textSize="14sp"
                            android:textStyle="italic"
                            android:paddingStart="17dp"
                            android:paddingBottom="1dp"/>

                    <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:text="23 Sep 2021"
                            android:justificationMode="inter_word"
                            android:textSize="14sp"
                            android:id="@+id/service_date"
                            android:layout_weight="0.5"
                            android:textStyle="italic"
                            android:paddingStart="17dp"
                            android:paddingBottom="1dp"/>

                </LinearLayout>

                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:orientation="horizontal">

                    <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:text="Service Time"
                            android:layout_weight="0.5"
                            android:textSize="14sp"
                            android:textStyle="italic"
                            android:paddingStart="17dp"
                            android:paddingBottom="1dp"/>

                    <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:text="10:00 - 11:00"
                            android:justificationMode="inter_word"
                            android:textSize="14sp"
                            android:id="@+id/service_time"
                            android:layout_weight="0.5"
                            android:textStyle="italic"
                            android:paddingStart="17dp"
                            android:paddingBottom="1dp"/>

                </LinearLayout>

                <View
                        android:layout_width="match_parent"
                        android:layout_height="2dp"
                        android:background="#808080"
                        android:layout_marginRight="5dp"
                        android:layout_marginLeft="5dp"
                        android:layout_marginTop="10dp"/>

                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:orientation="horizontal">

                    <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:text="Payment Mode"
                            android:layout_weight="0.5"
                            android:textSize="14sp"
                            android:textStyle="italic"
                            android:paddingStart="17dp"
                            android:paddingBottom="1dp"/>

                    <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:text="Cash"
                            android:justificationMode="inter_word"
                            android:textSize="14sp"
                            android:layout_weight="0.5"
                            android:textStyle="italic"
                            android:paddingStart="17dp"
                            android:paddingBottom="1dp"/>

                </LinearLayout>

            </LinearLayout>

        </ScrollView>

    </RelativeLayout>

</LinearLayout>